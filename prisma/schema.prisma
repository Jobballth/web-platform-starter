generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  fullName  String?
  password  String
  createdAt DateTime @default(now())
  
  // ✅ เชื่อมความสัมพันธ์: 1 User สามารถมีได้หลาย Task
  tasks     Task[]
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?  // เพิ่มคำอธิบายงาน
  status      String   @default("todo")    // todo, in-progress, completed
  priority    String   @default("medium")  // low, medium, high
  date        String?
  createdAt   DateTime @default(now())

  // ✅ เชื่อมงานเข้ากับ User ผู้สร้าง
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}